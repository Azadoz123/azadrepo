}

<ul class="dropdown-menu">
    @foreach(var item in Model.Cart.CartLines)
    {
        <li>
            <a>@item.Product.ProductName <span >@item.Quantity</span></a>
        </li>
    }
    @*<li><a class="dropdown-item" href="#">Action</a></li>
