    <li><hr class="dropdown-divider"></li>
    <li >
        <a><span class="glyhicon glyhicon-align-left glyhicon-shopping-cart" aria-hidden="true"></span>@Model.Cart.Total</a>
    </li>
    <li><hr class="dropdown-divider"></li>
    <li>
        <a asp-controller="Cart" asp-action="List">Go to cart details</a>
    </li>
    <li><a class="dropdown-item" href="#">Something else here</a></li>

</ul>